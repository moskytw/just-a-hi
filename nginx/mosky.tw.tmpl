server {

    server_name $DOMAIN;

    charset UTF-8;

    error_page 404 /404;

    set $root $PROD_ROOT;
    set $uwsgi_port $PROD_UWSGI_PORT;

    location ^~ /$DEV {

        set $root $DEV_ROOT;
        set $uwsgi_port $DEV_UWSGI_PORT;

        rewrite /$DEV/?(.*) /$1;
    }

    location / {

        root $root;

        location ~ ^/(img|js|css|html|json)/ {
            try_files $uri =404;
        }

        location ~ \.(png|jpg|gif|ico)$ {
            try_files /img$uri =404;
        }

        location ~ \.(js|css|html|json)$ {
            try_files /$1$uri =404;
        }

        include uwsgi_params;
        uwsgi_pass 127.0.0.1:$uwsgi_port;
    }
}
